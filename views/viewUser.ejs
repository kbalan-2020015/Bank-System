<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./components/headTag') -%>
</head>
<body>
    <%- include('./components/navbar') -%>

        <!-- - Regresar a todos los usuarios -->
        <div class="container mt-2">
          <a href="./home.html" class="btn btn-secondary fw-bold ">&larr; Back</a>
      </div>
      
<div class="container mt-5">
 <div class="container mt-5 text-center text-light fw-30 p-2" style="background-color: #219ebc;">
   <h3>View All Customer</h3>
 </div>

    <table class="table mt-2" style="background-color: #e7ecef;">
        <thead class="bg-primary text-light">
          <tr style="background-color: #219ebc;">
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Account Number</th>
            <th scope="col">Balence</th>
            <th scope="col">Action</th>
            <th scope="col">Remove</th>
            
          </tr>
        </thead>
        <tbody>
          <% if(data.length>0){%>
            <% data.forEach((e) => {%>
              <tr>
                <td><%= e.name %></td>
                <td><%= e.email %></td>
                <td><%= e.accountNumber  %></td>
                <td><%= e.amount  %></td>
                <td>
                  <a href="/view/<%=e._id %>" class="btn" style="background-color: #219ebc; color: white">View & Transfer</a>
                </td>
                <td>
                  <a href="/delete/<%=e._id %>"" class="btn btn-danger" >
                  <i class="fa fa-trash" ></i>
                </a>
                </td>
              </tr>
                            
              <%}) %>        
            
            <%}else{%>
              <tr class="bg-warning text-light">
                <td>
                  
                    No records Found!
                  
                </td>
              </tr>
              <%} %>
        </tbody>
      </table>
    </div>

    <%- include('./components/bootstrapScript') -%>
</body>
</html>